@using PIO.ViewModels

@model AddQuestionViewModel
@{
    ViewBag.Title = "Add";
}

@using (Html.BeginForm("Add", "Question", FormMethod.Post))
{
    <div class="row" style="margin-top:10px">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.Question.Title, "Постави прашање:")
                @Html.TextAreaFor(m => m.Question.Title, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Question.Description, "Oпис на прашањето:")
                @Html.TextAreaFor(m => m.Question.Description, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.Question.Category.Id, new SelectList(Model.Categories, "Id", "Name"), "Select Category")
                
            </div>
            <div class="form-group">
                <span>@DateTime.Now</span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Одговори</button>

}

