@using PIO.ViewModels

@model AddQuestionViewModel
@{
    ViewBag.Title = "Add";
}

<div class="container col-md-8" style="margin-top:20px">
    @using (Html.BeginForm("Add", "Question", FormMethod.Post))
    {
        <form>
                <div class="form-group">
                    @Html.LabelFor(m => m.Question.Title, "Постави прашање:", new { style = "font-size:18px"})
                    @Html.TextAreaFor(m => m.Question.Title,3,70,new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Question.Title)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Question.Description, "Oпис на прашањето:", new { style = "font-size:18px" })
                    @Html.TextAreaFor(m => m.Question.Description,5,70, new { @class = "form-control" } )
                </div>
                <div class="form-group">
                    @Html.DropDownList("categoryId", new SelectList(Model.Categories, "Id", "Name", Model.Categories.First().Id))
                </div>
                <div class="form-group">
                    <span>@DateTime.Now</span>
                </div>

            <button type="submit" class="btn btn-primary">Прашај</button>
        </form>
    }
</div>