@using PIO.Models.Domain
@model Answer

<div class="row align-items-center question-list-item">
    <div class="col-sm-2 text-center question-list-item-votes">
        <div>
            @Model.Votes.Count
        </div>
        <button class="btn btn-primary">Глас +</button>
    </div>
    <div class="col-sm-10" style="padding: 0">
        <div style="font-size: 14px">
            @Html.ActionLink(Model.AnsweredBy.UserName, "Details", "User" , new { id = Model.AnsweredBy.Id }, null) одговара:
        </div>
        <div>
            <p class="answer-list-item-content">@Model.Content</p>
        </div>
        <div>
            <span style="font-size: 11px; margin-left: 10px;">@Model.DateCreated</span>
        </div>
    </div>

</div>


