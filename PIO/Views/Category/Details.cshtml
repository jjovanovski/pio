@using PIO.Models.Domain
@using PIO.ViewModels


@model CategoryViewModel

@{
    ViewBag.Title = "Category Page";
}

<div class="row">
    <h3>Прашања од категоријата: </h3>
    <div class="row">
        @foreach (var q in Model.Questions)
        {
            @Html.Partial("_QuestionListItem", q)
        }
    </div>
</div>

<div class="text-center">
    @for (int i = 1; i <= Math.Ceiling(Model.Questions.Count / (double)10); i++)
    {
        <ul class="pagination">
            <li>@Html.ActionLink(@i.ToString(), "Details", "Category", new { page = @i }, null)</li>
        </ul>
    }
</div>
