@using PIO.Models.Domain
@using PIO.ViewModels

@model HomeViewModel

<div class="row">
    <h3>Популарни неодговорени прашања</h3>
    <div class="row">
        @foreach (var q in Model.PopularUnansweredQuestions)
        {
            @Html.Partial("_QuestionListItem", q)
        }
    </div>
</div>

<div class="text-center">
    @for (int i = 1; i <= Math.Ceiling(ViewBag.Items / (double)5); i++)
    {
        <ul class="pagination">
            <li>@Html.ActionLink(@i.ToString(), "PopularUnansweredQuestions", "Home", new { page = @i }, null)</li>
        </ul>
    }
</div>

